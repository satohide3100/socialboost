<div class="card">
  <div class="card-header">
    <strong>いいねリスト追加</strong>
  </div>
  <div class="card-body">
    <form>
      <div class="row">
        <div class="col-6">
          <select class="custom-select" id="addoption">
            <option selected>いいねリスト追加方法</option>
            <option value="1">特定のキーワードの投稿を追加</option>
            <option value="2">特定のユーザーの投稿を追加</option>
          </select>
        </div>
        <div class="col-6">
        </div>
      </div>
      <br>
      <div class="row">
        <div class="col-6">
          <div class="form-group user showform" style="display:none;">
            <input type="text" class="form-control" id="exampleInputEmail1" placeholder="ユーザーのアカウント名（@以降）">
          </div>
          <div class="form-group word showform" style="display:none;">
            <input type="text" class="form-control" id="exampleInputEmail1" placeholder="特定のキーワード">
          </div>
        </div>
      </div>

      <button type="submit" class="btn btn-primary">追加</button>
    </form>
  </div>
</div><br><br>
<div class="card">
  <div class="card-header">
    <strong>いいねリスト一覧</strong>
  </div>
  <div class="card-body">

  </div>
</div>

<script>
$('#addoption').change(function () {
  var text = $('option:selected').val();
  if (text == "2") {
    $('.showform').hide();
    $('.user').fadeIn();
  } else if (text == "1") {
    $('.showform').hide();
    $('.word').fadeIn();
  }
})
</script>
