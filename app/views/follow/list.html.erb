        現在、フォロー予定のアカウントはありません。
        <% end %>
      </div>
    </div><br><br>
  </div>
  <div class="tab-pane fade" id="facebook" role="tabpanel" aria-labelledby="facebook-tab">

  </div>
</div>


<script>
  $('.loading').hide();
  $('.more1').hide();
  $('.morebtn1').click(function () {
    $('.more1').fadeIn();
  })
  $('.more2').hide();
  $('.morebtn2').click(function () {
    $('.more2').fadeIn();
  })
  $('.addLoading').click(function () {
    $(this).hide();
    $('.loading').show();
  })
  $('.addoption1').change(function () {
    var text = $('.addoption1>option:selected').val();
    if (text == "1" || text == "2") {
      $('.showform1').hide();
      $('.user1').fadeIn();
    } else if (text == "3") {
      $('.showform1').hide();
      $('.word1').fadeIn();
    } else if (text == "4" || text == "5") {
      $('.showform1').hide();
      $('.post1').fadeIn();
    }
  })
  $('.addoption2').change(function () {
    var text = $('.addoption2>option:selected').val();
    if (text == "1" || text == "2") {
      $('.showform2').hide();
      $('.user2').fadeIn();
    } else if (text == "3") {
      $('.showform2').hide();
      $('.word2').fadeIn();
    } else if (text == "4" || text == "5") {
      $('.showform2').hide();
      $('.post2').fadeIn();
    }
  })
</script>
