
<h3><strong>アクションログ</strong></h3>
<div class="card shadow">
  <div class="card-body">
    <table class="table text-center">
      <thead class="thead-light">
        <tr>
          <th>Type</th>
          <th>Content</th>
          <th>Time</th>
        </tr>
      </thead>
      <tbody>
        <% @notifications.each do |n| %>
        <tr>
          <% if n.notification_type == 10 %>
          <td>フォロー</td>
          <% else %>
          <td>いいね</td>
          <% end %>
          <td><%= n.content %></td>
          <td><%= (n.created_at >> 9).strftime('%m月%d日 %H:%M:%S') %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
